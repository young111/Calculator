<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.hs.emirim.young111.calculator.MainActivity"
    android:transitionGroup="false">

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/edit_n1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/edit_n2"
        android:layout_below="@+id/edit_n1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_plus"
        android:id="@+id/but_plus"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/edit_n2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_minus"
        android:id="@+id/but_minus"
        android:layout_below="@+id/but_plus"
        android:layout_alignLeft="@+id/but_plus"
        android:layout_alignStart="@+id/but_plus"
        android:layout_marginTop="39dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_divide"
        android:id="@+id/but_divide"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/but_minus"
        android:layout_alignLeft="@+id/but_minus"
        android:layout_alignStart="@+id/but_minus" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_multiply"
        android:id="@+id/but_multiply"
        android:layout_below="@+id/but_divide"
        android:layout_alignRight="@+id/but_divide"
        android:layout_alignEnd="@+id/but_divide"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_result"
        android:id="@+id/text_result"
        android:textColor="#f43b3b"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
